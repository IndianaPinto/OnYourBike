<div class="container py-5">
  <div class="row">
    <div class="col-12 col-md-6 offset-lg-3">
      <div class="bg-white rounded p-3 shadow">
        <h3>Add a new bike</h3>
        <%= simple_form_for @bike do |f| %>
          <%= f.input :name %>
          <%= f.input :bike_type %>
          <%= f.input :price, as: :float %>
          <%= f.input :location %>
          <%= f.input :photo, as: :file %>

          <%= f.submit class: 'btn btn-primary me-2s' %>
          <%= link_to "Return to Bikes", bikes_path(@bike), class: "btn btn-primary me-2" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
